@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome to Pipe Trace Viewer</h1>

	<div class="row justify-content-center mt-5">
		<div class="col-5">
			<form asp-action="Index">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label for="fileSelector">Select file</label>
					<select name="fileName" class="form-control w-50 m-auto form-control-lg" asp-items="ViewBag.files" id="fileSelector"></select>
				</div>
				<div class="form-group">
					<input type="submit" value="Start" class="btn btn-primary w-50"  />
				</div>
			</form>
		</div>
	</div>

</div>

